<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.fastergps"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="13" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required permission to use Google Android Market donations -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:debuggable="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".ui.BaseActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AdvancedSettingsActivity"
            android:label="@string/activity_advanced_settings"
            android:launchMode="singleInstance" />
        <activity
            android:name=".ui.HelpActivity"
            android:label="@string/activity_help" />
        <activity
            android:name=".ui.AboutActivity"
            android:excludeFromRecents="true"
            android:label="@string/activity_about"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".ui.DonationsActivity"
            android:excludeFromRecents="true"
            android:label="@string/activity_donations"
            android:theme="@android:style/Theme.Dialog" />

        <!-- - Google Android Market donations -->
        <service android:name=".google.donations.BillingService" />

        <receiver android:name=".google.donations.BillingReceiver" >
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>