<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <fragment
                android:id="@+id/help_about_fragment"
                android:name="org.fastergps.ui.HelpAboutFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/help_fragment_about"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dip"
                android:text="@string/help_help"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        <fragment
                android:id="@+id/help_html_fragment"
                android:name="org.fastergps.ui.HelpHtmlFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dip"
                android:text="@string/help_donations"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        <LinearLayout
                android:id="@+id/help_donations_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

</ScrollView>